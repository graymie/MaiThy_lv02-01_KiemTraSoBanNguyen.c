# include"stdio.h"
#include"conio.h"
#include"math.h"
int main()
{
	int x1,y1,x2,y2,x3,y3,x4,y4,m;
	float a,b,c,d;
	printf("tinh dien tich hinh tam giac nhap 1,\n hinh vuong nhap hinh chu nhat nhap 2,\ndien tich hinh tron nhap 3");
	scanf("%d",&m);
	switch (m)
	{
	case 1:
	{printf("nhap toa do dinh A,x1=,y1=");
		scanf("%d%d",&x1,&y1);
		printf("nhap toa do dinh B,x2=,y2=");
		scanf("%d%d",&x2,&y2);
		printf("nhap toa do dinh C,x3=,y3=");
		scanf("%d%d",&x3,&y3);
		a= sqrt(pow(x2-x1,2)+pow(y2-y1,2));
		b=sqrt(pow(x3-x1,2)+pow(y3-y1,2));
		c=sqrt(pow(x2-x3,2)+pow(y2-y3,2));
		d=(sqrt(pow(x2-x1,2)+pow(y2-y1,2))+sqrt(pow(x3-x1,2)+pow(y3-y1,2))+sqrt(pow(x2-x3,2)+pow(y2-y3,2)))/2;
	
		printf("chu vi la %f",a+b+c);
		printf("dien tich la %f",sqrt(d*(d-a)*(d-b)*(d-c)));
		break;
	}
	case 2:
	{printf("nhap toa do dinh A,x1=,y1=");
		scanf("%d%d",&x1,&y1);
		printf("nhap toa do dinh B,x2=,y2=");
		scanf("%d%d",&x2,&y2);
		printf("nhap toa do dinh C,x3=,y3=");
	    scanf("%d%d",&x3,&y3);
		printf("nhap toa do dinh D,x4=,y4=");
		scanf("%d%d",&x4,&y4);
		a= sqrt(pow(x2-x1,2)+pow(y2-y1,2));
		b=sqrt(pow(x3-x2,2)+pow(y3-y2,2));
		c=sqrt(pow(x4-x3,2)+pow(y4-y3,2));
	
		d=sqrt(pow(x4-x1,2)+pow(y4-y1,2));
		printf("chu vi la %f",a+b+c+d);
			printf("dien tich la %f",a*b);
			break;}
			case 3:
			{printf("nhap toa do tam A,x1=,y1=");
		scanf("%d%d",&x1,&y1);
		printf("nhap toa do diem B tren duong tron tam A,x2=,y2=");
		scanf("%d%d",&x2,&y2);
		a= sqrt(pow(x2-x1,2)+pow(y2-y1,2));
			printf("chu vi la %f",2*3.14*a);
			printf("dien tich la %f",3.14*a*a);
			break;}}
		
	getch();}